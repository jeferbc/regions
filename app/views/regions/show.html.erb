<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h2 class="text-center"><%= @region.name %> Municipalities</h2>
      <%= link_to "New Municipality", new_region_municipality_path(@region), class: "btn btn-primary" %>
      <table class="table">
        <thead>
          <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Code</td>
            <td>Status</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% @region.municipalities.each do |municipality| %>
            <tr>
              <td><%= municipality.id %></td>
              <td><%= municipality.name.humanize %></td>
              <td><%= municipality.code %></td>
              <td><%= municipality.status.humanize %></td>
              <td><%= link_to 'Edit', edit_region_municipality_path(@region, municipality) %> -
                <%= link_to "Delete", region_municipality_path(@region, municipality) , method: :delete, data: { confirm: 'Are you sure?' }%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to "Back", regions_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
